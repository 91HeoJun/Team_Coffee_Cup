	<!-- 첨부물 가져오기 -->
	<select id="attachList" resultType="com.company.domain.ProductFileAttach">
		select uuid,filename from ProdctTBL_Attach where pcode=#{pcode}
	</select>
	
	
<!-- 동적 SQL -->
	<sql id="criteria">
		<trim prefix="(" suffix=") AND" prefixOverrides="OR">
			<foreach collection="typeArr" item="type">
				<trim prefix="OR">
					<choose>
						<when test="type=='P'.toString()">
							product like '%'||#{keyword}||'%'
						</when>
						<when test="type=='C'.toString()">
							pcontent like '%'||#{keyword}||'%'
						</when>
					</choose>
				</trim>
			</foreach>
		</trim>
	</sql>


</mapper>
	