<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mapper.ProductMapper">
	<insert id="insert">
		insert into ProductTBL(pCode, pCategory, product, pContent, pAmount, pDate, origin)
		values(#{bno},#{title},#{content},#{writer})
	</insert>
	<update id="update">
		update ProductTBL set price=#{price} where code=#{code}
	</update>
	<delete id="delete">
		delete from ProductTBL where code=#{code}
	</delete>
	<select id="select" resultType="com.company.domain.ProductVO">
		select * from ProductTBL where code=#{code}
	</select>
	<select id="selectAll" resultType="com.company.domain.ProductVO">
		select * from ProductTBL
	</select>
</mapper>