			<choose>
			<!-- cri.type == 'pcontent'.toString() -->
			    <when test="type=='c'.toString()">
			      pcontent like '%'||#{keyword}||'%' and			     
			    </when>
			    <when  test="type=='g'.toString()">
			      pcategory = #{keyword} and
			    </when>			   
			 </choose>	
			
			<![CDATA[		   
						rownum <= (#{pageNum}*#{amount}))
			where rn > (#{pageNum}-1)*#{amount}	
		]]>	
	</select>
	
